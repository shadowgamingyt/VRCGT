<UserControl x:Class="VRCGroupTools.Views.FriendInviterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodels="clr-namespace:VRCGroupTools.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:FriendInviterViewModel}"
             mc:Ignorable="d"
             Background="Transparent"
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸ‘¥ Friend Manager" 
                      FontSize="28" 
                      FontWeight="Bold" 
                      Foreground="White"/>
            <TextBlock Text="View your VRChat friends list, manage connections, and see who's online" 
                      Foreground="#888" 
                      FontSize="14" 
                      Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Search and Filters -->
        <Border Grid.Row="1" Background="#2D2D30" CornerRadius="8" Padding="20" Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Search Box -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox Grid.Column="0"
                            Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                            materialDesign:HintAssist.Hint="ðŸ” Search friends by name..."
                            Foreground="White"
                            CaretBrush="White"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                            Margin="0,0,15,0"/>

                    <Button Grid.Column="1"
                           Content="ðŸ”„ Refresh"
                           Command="{Binding RefreshCommand}"
                           Style="{StaticResource MaterialDesignOutlinedButton}"
                           Width="100"/>
                </Grid>

                <!-- Filters -->
                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <CheckBox Content="Online Only" 
                             IsChecked="{Binding OnlineOnly}"
                             Foreground="White"
                             Margin="0,0,20,0"/>
                    <CheckBox Content="18+ Verified" 
                             IsChecked="{Binding Only18Plus}"
                             Foreground="White"
                             Margin="0,0,20,0"/>
                    <CheckBox Content="Show Trust Levels" 
                             IsChecked="{Binding ShowTrustLevels}"
                             Foreground="White"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Friends List -->
        <Border Grid.Row="2" Background="#1E1E1E" CornerRadius="8" Padding="15">
            <Grid>
                <!-- Loading Indicator -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                           Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                Value="0"
                                IsIndeterminate="True"
                                Width="50" Height="50"
                                Foreground="#7C4DFF"/>
                    <TextBlock Text="Loading friends..." 
                              Foreground="#888" 
                              Margin="0,15,0,0"
                              HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Empty State -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                           Visibility="{Binding FilteredFriends.Count, Converter={StaticResource ZeroToVisibilityConverter}}">
                    <TextBlock Text="ðŸ‘¥" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    <TextBlock Text="No friends found" 
                              FontSize="18" 
                              FontWeight="SemiBold"
                              Foreground="White"
                              HorizontalAlignment="Center"
                              Margin="0,0,0,10"/>
                    <TextBlock Text="Try adjusting your search filters" 
                              Foreground="#888" 
                              FontSize="13" 
                              HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Friends List -->
                <ScrollViewer VerticalScrollBarVisibility="Auto"
                             Visibility="{Binding IsLoading, Converter={StaticResource InverseBoolToVisConverter}}">
                    <ItemsControl ItemsSource="{Binding FilteredFriends}" Padding="5">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#2D2D30" 
                                       CornerRadius="8" 
                                       Padding="15" 
                                       Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Selection Checkbox -->
                                        <CheckBox Grid.Column="0" 
                                                 IsChecked="{Binding IsSelected}"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,15,0"/>

                                        <!-- Avatar -->
                                        <Border Grid.Column="1" 
                                               Width="50" Height="50" 
                                               CornerRadius="25" 
                                               Background="#1E1E1E" 
                                               ClipToBounds="True" 
                                               VerticalAlignment="Top">
                                            <Image Source="{Binding Friend.ProfilePicUrl}" 
                                                  Stretch="UniformToFill"/>
                                        </Border>

                                        <!-- Friend Info -->
                                        <StackPanel Grid.Column="2" 
                                                   Margin="15,0,15,0" 
                                                   VerticalAlignment="Center">\n                                            <TextBlock Text="{Binding Friend.DisplayName}" 
                                                      Foreground="White" 
                                                      FontWeight="SemiBold" 
                                                      FontSize="15"/>
                                            
                                            <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                <TextBlock Text="{Binding TrustLevel}" 
                                                          Foreground="{Binding TrustLevelBrush}"
                                                          FontSize="11"
                                                          Margin="0,0,10,0"
                                                          Visibility="{Binding DataContext.ShowTrustLevels, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                
                                                <TextBlock Text="ðŸ”ž" 
                                                          FontSize="11"
                                                          Margin="0,0,10,0"
                                                          Visibility="{Binding Friend.IsAgeVerified, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                                
                                                <TextBlock Text="{Binding Friend.Status}" 
                                                          Foreground="{Binding StatusBrush}"
                                                          FontSize="11"/>
                                            </StackPanel>

                                            <TextBlock Text="{Binding Friend.StatusDescription}" 
                                                      Foreground="#888" 
                                                      FontSize="11" 
                                                      TextTrimming="CharacterEllipsis"
                                                      MaxWidth="400"
                                                      Margin="0,3,0,0"
                                                      Visibility="{Binding Friend.StatusDescription, Converter={StaticResource EmptyStringToVisibilityConverter}, ConverterParameter=Inverse}"/>
                                        </StackPanel>

                                        <!-- Status Indicator -->
                                        <Border Grid.Column="3"
                                               Width="12" Height="12"
                                               CornerRadius="6"
                                               Background="{Binding StatusBrush}"
                                               VerticalAlignment="Center"
                                               ToolTip="{Binding Friend.Status}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Action Bar -->
        <Border Grid.Row="3" 
               Background="#252526" 
               Padding="20,15"
               Visibility="{Binding FilteredFriends.Count, Converter={StaticResource ZeroToVisibilityConverter}, ConverterParameter=Inverse}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Selection Controls -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="Select All" 
                           Command="{Binding SelectAllCommand}"
                           Style="{StaticResource MaterialDesignFlatButton}"
                           Foreground="#7C4DFF"
                           Margin="0,0,10,0"/>
                    <Button Content="Deselect All" 
                           Command="{Binding DeselectAllCommand}"
                           Style="{StaticResource MaterialDesignFlatButton}"
                           Foreground="#7C4DFF"/>
                </StackPanel>

                <!-- Selected Count -->
                <TextBlock Grid.Column="1" 
                          Text="{Binding SelectedCount, StringFormat='{}{0} selected'}"
                          Foreground="#888"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"
                          FontSize="14"/>

                <!-- Invite Button -->
                <Button Grid.Column="2" 
                       Content="ðŸ“¨ Invite Selected to Group" 
                       Command="{Binding InviteToGroupCommand}"
                       Style="{StaticResource MaterialDesignRaisedButton}"
                       Background="#4CAF50"
                       Height="40"
                       Padding="20,0"
                       IsEnabled="{Binding SelectedCount, Converter={StaticResource ZeroToVisibilityConverter}, ConverterParameter=Inverse}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
