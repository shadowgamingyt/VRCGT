<UserControl x:Class="VRCGroupTools.Views.FriendInviterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodels="clr-namespace:VRCGroupTools.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:FriendInviterViewModel}"
             mc:Ignorable="d"
             Background="Transparent"
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,15">
            <TextBlock Text="ðŸ‘¥ Friend Manager" 
                      FontSize="24" 
                      FontWeight="Bold" 
                      Foreground="White"/>
            <TextBlock Text="Select friends to invite to your group" 
                      Foreground="#888" 
                      FontSize="13" 
                      Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Search and Filters -->
        <Border Grid.Row="1" Background="#2D2D30" CornerRadius="8" Padding="15" Margin="0,0,0,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <TextBox Grid.Column="0"
                        Text="{Binding SearchQuery, UpdateSourceTrigger=PropertyChanged}"
                        materialDesign:HintAssist.Hint="ðŸ” Search by name..."
                        Foreground="White"
                        CaretBrush="White"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        Width="250"
                        Margin="0,0,10,0"/>

                <CheckBox Grid.Column="1" 
                         Content="18+ Only" 
                         IsChecked="{Binding Only18Plus, UpdateSourceTrigger=PropertyChanged}"
                         Foreground="White"
                         VerticalAlignment="Center"
                         Margin="0,0,10,0"/>

                <CheckBox Grid.Column="2" 
                         Content="Hide In Group" 
                         IsChecked="{Binding HideInGroup, UpdateSourceTrigger=PropertyChanged}"
                         Foreground="White"
                         VerticalAlignment="Center"
                         Margin="0,0,10,0"/>

                <Button Grid.Column="3"
                       Content="ðŸ”„ Sync Members"
                       Command="{Binding SyncMembersCommand}"
                       ToolTip="Sync group members from VRChat to enable 'In Group' badges"
                       Style="{StaticResource MaterialDesignOutlinedButton}"
                       Width="150"
                       Height="36"
                       Margin="0,0,10,0"/>

                <Button Grid.Column="4"
                       Content="ðŸ”„ Refresh"
                       Command="{Binding RefreshCommand}"
                       ToolTip="Refresh friends list"
                       Style="{StaticResource MaterialDesignOutlinedButton}"
                       Width="120"
                       Height="36"/>
            </Grid>
        </Border>

        <!-- Friends List -->
        <Border Grid.Row="2" Background="#1E1E1E" CornerRadius="8">
            <Grid>
                <!-- Loading Indicator -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center"
                           Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                Value="0"
                                IsIndeterminate="True"
                                Width="40" Height="40"
                                Foreground="#7C4DFF"/>
                    <TextBlock Text="{Binding StatusMessage}" 
                              Foreground="#888" 
                              Margin="0,10,0,0"
                              HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Empty State (only show when not loading AND no friends) -->
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding IsLoading}" Value="False"/>
                                        <Condition Binding="{Binding FilteredCount}" Value="0"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </StackPanel.Style>
                    <TextBlock Text="No friends found" 
                              FontSize="16" 
                              Foreground="#888"
                              HorizontalAlignment="Center"/>
                    <TextBlock Text="Try adjusting your search" 
                              Foreground="#666" 
                              FontSize="12" 
                              HorizontalAlignment="Center"
                              Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Friends List -->
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="10">
                    <ScrollViewer.Style>
                        <Style TargetType="ScrollViewer">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding IsLoading}" Value="False"/>
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible"/>
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ScrollViewer.Style>
                    <ItemsControl ItemsSource="{Binding FilteredFriends}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#2D2D30" 
                                       CornerRadius="6" 
                                       Padding="10" 
                                       Margin="0,0,0,6">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Selection Checkbox -->
                                        <CheckBox Grid.Column="0" 
                                                 IsChecked="{Binding IsSelected}"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,10,0"/>

                                        <!-- Avatar -->
                                        <Border Grid.Column="1" 
                                               Width="40" Height="40" 
                                               CornerRadius="20" 
                                               Background="#1E1E1E" 
                                               ClipToBounds="True">
                                            <Image Source="{Binding Friend.ProfilePicUrl}" 
                                                  Stretch="UniformToFill"/>
                                        </Border>

                                        <!-- Friend Info -->
                                        <StackPanel Grid.Column="2" 
                                                   Margin="10,0,10,0" 
                                                   VerticalAlignment="Center">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Friend.DisplayName}" 
                                                          Foreground="White" 
                                                          FontWeight="SemiBold" 
                                                          FontSize="14"/>
                                                
                                                <!-- 18+ Badge -->
                                                <TextBlock Text=" ðŸ”ž" 
                                                          FontSize="12"
                                                          VerticalAlignment="Center"
                                                          Visibility="{Binding Friend.IsAgeVerified, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                            </StackPanel>
                                            
                                            <StackPanel Orientation="Horizontal" Margin="0,2,0,0">
                                                <!-- Status dot -->
                                                <Ellipse Width="8" Height="8" 
                                                        Fill="{Binding StatusBrush}"
                                                        VerticalAlignment="Center"
                                                        Margin="0,0,5,0"/>
                                                <TextBlock Text="{Binding Friend.Status}" 
                                                          Foreground="#888"
                                                          FontSize="11"/>
                                            </StackPanel>
                                        </StackPanel>

                                        <!-- In Group Badge -->
                                        <Border Grid.Column="3"
                                               Background="#2196F3"
                                               CornerRadius="4"
                                               Padding="8,4"
                                               VerticalAlignment="Center"
                                               Margin="0,0,10,0"
                                               Visibility="{Binding IsInGroup, Converter={StaticResource BooleanToVisibilityConverter}}">
                                            <TextBlock Text="IN GROUP" 
                                                      Foreground="White" 
                                                      FontSize="10" 
                                                      FontWeight="Bold"/>
                                        </Border>

                                        <!-- Status Indicator -->
                                        <Border Grid.Column="4"
                                               Width="10" Height="10"
                                               CornerRadius="5"
                                               Background="{Binding StatusBrush}"
                                               VerticalAlignment="Center"
                                               ToolTip="{Binding Friend.Status}"/>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Action Bar -->
        <Border Grid.Row="3" 
               Background="#252526" 
               CornerRadius="8"
               Padding="15"
               Margin="0,10,0,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Selection Controls -->
                <Button Grid.Column="0"
                       Content="Select All" 
                       Command="{Binding SelectAllCommand}"
                       Style="{StaticResource MaterialDesignFlatButton}"
                       Foreground="#7C4DFF"/>
                <Button Grid.Column="1"
                       Content="Deselect All" 
                       Command="{Binding DeselectAllCommand}"
                       Style="{StaticResource MaterialDesignFlatButton}"
                       Foreground="#7C4DFF"/>

                <!-- Selected Count -->
                <TextBlock Grid.Column="2" 
                          Text="{Binding SelectedCount, StringFormat='{}{0} selected'}"
                          Foreground="#888"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"
                          FontSize="13"/>

                <!-- Invite Button -->
                <Button Grid.Column="3" 
                       Content="ðŸ“¨ Invite to Group" 
                       Command="{Binding InviteToGroupCommand}"
                       Style="{StaticResource MaterialDesignRaisedButton}"
                       Background="#4CAF50"
                       Height="36"
                       Padding="15,0"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
