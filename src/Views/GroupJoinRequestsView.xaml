<UserControl x:Class="VRCGroupTools.Views.GroupJoinRequestsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodels="clr-namespace:VRCGroupTools.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:GroupJoinRequestsViewModel}"
             mc:Ignorable="d"
             Background="Transparent"
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸ“¥ Group Join Requests" 
                      FontSize="28" 
                      FontWeight="Bold" 
                      Foreground="White"/>
            <TextBlock Text="View and manage pending join requests to your group" 
                      Foreground="#888" 
                      FontSize="14" 
                      Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Control Panel -->
        <Border Grid.Row="1" Background="#2D2D30" CornerRadius="8" Padding="20" Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Monitoring Controls -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <Button Command="{Binding RefreshCommand}"
                               Style="{StaticResource MaterialDesignRaisedButton}"
                               Background="#7C4DFF"
                               Height="40"
                               Margin="0,0,10,0"
                               Padding="15,0">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="ðŸ”„" FontSize="14" Margin="0,0,8,0"/>
                                <TextBlock Text="Refresh" FontSize="14"/>
                            </StackPanel>
                        </Button>

                        <Button Command="{Binding ToggleMonitoringCommand}"
                               Height="40"
                               Padding="15,0">
                            <Button.Style>
                                <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                    <Setter Property="Background" Value="#4CAF50"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsMonitoring}" Value="True">
                                            <Setter Property="Background" Value="#FF5722"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock FontSize="14" Margin="0,0,8,0">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="â–¶ï¸"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsMonitoring}" Value="True">
                                                    <Setter Property="Text" Value="â¹ï¸"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                                <TextBlock FontSize="14">
                                    <TextBlock.Style>
                                        <Style TargetType="TextBlock">
                                            <Setter Property="Text" Value="Start Monitoring"/>
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding IsMonitoring}" Value="True">
                                                    <Setter Property="Text" Value="Stop Monitoring"/>
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBlock.Style>
                                </TextBlock>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <Border Grid.Column="1" 
                           Background="#7C4DFF" 
                           CornerRadius="12" 
                           Padding="12,6"
                           Visibility="{Binding TotalRequests, Converter={StaticResource ZeroToVisibilityConverter}, ConverterParameter=Inverse}">
                        <TextBlock Text="{Binding TotalRequests, StringFormat='{}{0} pending'}" 
                                  Foreground="White" 
                                  FontWeight="Bold" 
                                  FontSize="14"/>
                    </Border>
                </Grid>

                <!-- Filters and Settings -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Filters -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <CheckBox Content="18+ Only" 
                                 IsChecked="{Binding Only18Plus}"
                                 Foreground="White"
                                 Margin="0,0,20,0"/>
                        <CheckBox Content="Auto-Accept" 
                                 IsChecked="{Binding AutoAcceptEnabled}"
                                 Foreground="White"
                                 ToolTip="Automatically accept filtered requests"
                                 IsEnabled="{Binding IsMonitoring}"/>
                    </StackPanel>

                    <!-- Interval Setting -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Check every:" 
                                  Foreground="#AAA"
                                  VerticalAlignment="Center"
                                  Margin="0,0,10,0"/>
                        <TextBox Text="{Binding AutoAcceptIntervalSeconds}"
                                Width="50"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                VerticalAlignment="Center"
                                Foreground="White"
                                Margin="0,0,5,0"/>
                        <TextBlock Text="seconds" 
                                  Foreground="#AAA"
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Status Bar -->
        <Border Grid.Row="2" Background="#252526" Padding="15,10" Margin="0,0,0,15" CornerRadius="8">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <TextBlock Text="ðŸ“Š Status: " Foreground="#888" FontSize="13"/>
                    <TextBlock Text="{Binding StatusMessage}" Foreground="White" FontSize="13"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Border Background="#4CAF50" 
                           CornerRadius="8" 
                           Padding="8,4"
                           Visibility="{Binding IsMonitoring, Converter={StaticResource BooleanToVisibilityConverter}}"
                           Margin="0,0,10,0">
                        <TextBlock Text="ðŸŸ¢ Monitoring Active" 
                                  Foreground="White" 
                                  FontWeight="SemiBold" 
                                  FontSize="11"/>
                    </Border>
                    
                    <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                Value="0"
                                IsIndeterminate="True"
                                Width="20" Height="20"
                                Foreground="#7C4DFF"
                                Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Requests List -->
        <Border Grid.Row="3" Background="#2D2D30" CornerRadius="8" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <TextBlock Grid.Row="0" 
                          Text="Pending Requests" 
                          FontSize="18" 
                          FontWeight="SemiBold" 
                          Foreground="White" 
                          Margin="0,0,0,15"/>

                <!-- Empty State -->
                <StackPanel Grid.Row="1" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Center"
                           Visibility="{Binding FilteredJoinRequests.Count, Converter={StaticResource ZeroToVisibilityConverter}}">
                    <TextBlock Text="âœ…" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                    <TextBlock Text="No pending join requests" 
                              FontSize="16" 
                              FontWeight="SemiBold" 
                              Foreground="White" 
                              HorizontalAlignment="Center"
                              Margin="0,0,0,10"/>
                    <TextBlock Text="All caught up!" 
                              FontSize="13" 
                              Foreground="#888" 
                              HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Requests List -->
                <ScrollViewer Grid.Row="1" 
                             VerticalScrollBarVisibility="Auto"
                             Visibility="{Binding FilteredJoinRequests.Count, Converter={StaticResource ZeroToVisibilityConverter}, ConverterParameter=Inverse}">
                    <ItemsControl ItemsSource="{Binding FilteredJoinRequests}" Padding="5">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#1E1E1E" 
                                       CornerRadius="8" 
                                       Padding="15" 
                                       Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Selection Checkbox -->
                                        <CheckBox Grid.Column="0" 
                                                 IsChecked="{Binding IsSelected}"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,15,0"/>

                                        <!-- Avatar (Clickable) -->
                                        <Border Grid.Column="1" 
                                               Width="60" Height="60" 
                                               CornerRadius="30" 
                                               Background="#2D2D30" 
                                               ClipToBounds="True" 
                                               VerticalAlignment="Center"
                                               Margin="0,0,15,0"
                                               Cursor="Hand">
                                            <Border.InputBindings>
                                                <MouseBinding MouseAction="LeftClick" 
                                                            Command="{Binding DataContext.OpenUserProfileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                            CommandParameter="{Binding Request.UserId}"/>
                                            </Border.InputBindings>
                                            <Image Source="{Binding Request.ProfilePicUrl}" 
                                                  Stretch="UniformToFill"/>
                                        </Border>

                                        <!-- User Info -->
                                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                            <TextBlock Foreground="White" 
                                                      FontWeight="SemiBold" 
                                                      FontSize="15"
                                                      Cursor="Hand">
                                                <Hyperlink Command="{Binding DataContext.OpenUserProfileCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                          CommandParameter="{Binding Request.UserId}"
                                                          TextDecorations="None">
                                                    <Run Text="{Binding Request.DisplayName}" Foreground="White"/>
                                                </Hyperlink>
                                            </TextBlock>
                                            
                                            <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                                <TextBlock Text="{Binding TrustLevel}" 
                                                          Foreground="{Binding TrustLevelBrush}"
                                                          FontSize="11"
                                                          Margin="0,0,10,0"/>
                                            </StackPanel>
                                            
                                            <TextBlock Text="{Binding Request.UserId}" 
                                                      Foreground="#666" 
                                                      FontSize="10" 
                                                      Margin="0,3,0,0"/>
                                                      
                                            <TextBlock Text="{Binding Request.CreatedAt, StringFormat='Requested: {0}'}" 
                                                      Foreground="#888" 
                                                      FontSize="10" 
                                                      Margin="0,2,0,0"/>
                                        </StackPanel>

                                        <!-- Right Side Actions -->
                                        <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                            <!-- 18+ Badge -->
                                            <Border Background="#D32F2F" CornerRadius="4" Padding="8,4" Margin="0,0,15,0"
                                                    Visibility="{Binding Is18Plus, Converter={StaticResource BooleanToVisibilityConverter}}"
                                                    ToolTip="User is 18+ Verified">
                                                <TextBlock Text="18+" Foreground="White" FontWeight="Bold" FontSize="12"/>
                                            </Border>

                                            <!-- Processing Indicator -->
                                            <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                                        Value="0"
                                                        IsIndeterminate="True"
                                                        Width="24" Height="24"
                                                        Visibility="{Binding IsProcessing, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Loading Overlay -->
                <Grid Grid.Row="1" 
                      Background="#CC2D2D30" 
                      Visibility="{Binding IsLoading, Converter={StaticResource BooleanToVisibilityConverter}}"
                      Panel.ZIndex="100">
                    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                        <ProgressBar Style="{StaticResource MaterialDesignCircularProgressBar}"
                                   Value="0"
                                   IsIndeterminate="True"
                                   Width="50" Height="50"
                                   Foreground="#7C4DFF"
                                   Margin="0,0,0,20"/>
                        <TextBlock Text="Loading join requests..." 
                                  Foreground="White" 
                                  FontSize="16" 
                                  FontWeight="SemiBold"
                                  HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding StatusMessage}" 
                                  Foreground="#AAA" 
                                  FontSize="13" 
                                  Margin="0,5,0,0"
                                  HorizontalAlignment="Center"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Border>

        <!-- Action Bar -->
        <Border Grid.Row="4" 
               Background="#252526" 
               Padding="20,15"
               Visibility="{Binding FilteredJoinRequests.Count, Converter={StaticResource ZeroToVisibilityConverter}, ConverterParameter=Inverse}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Selection Controls -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="Select All" 
                           Command="{Binding SelectAllCommand}"
                           Style="{StaticResource MaterialDesignFlatButton}"
                           Foreground="#7C4DFF"
                           Margin="0,0,10,0"/>
                    <Button Content="Deselect All" 
                           Command="{Binding DeselectAllCommand}"
                           Style="{StaticResource MaterialDesignFlatButton}"
                           Foreground="#7C4DFF"/>
                </StackPanel>

                <!-- Selected Count -->
                <TextBlock Grid.Column="1" 
                          Text="{Binding SelectedCount, StringFormat='{}{0} selected'}"
                          Foreground="#888"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"
                          FontSize="14"/>

                <!-- Action Buttons -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="âœ… Approve Selected" 
                           Command="{Binding ApproveSelectedCommand}"
                           Style="{StaticResource MaterialDesignRaisedButton}"
                           Background="#4CAF50"
                           Height="40"
                           Padding="20,0"
                           Margin="0,0,10,0"
                           IsEnabled="{Binding SelectedCount, Converter={StaticResource ZeroToVisibilityConverter}, ConverterParameter=Inverse}"/>
                    <Button Content="âŒ Reject Selected" 
                           Command="{Binding RejectSelectedCommand}"
                           Style="{StaticResource MaterialDesignRaisedButton}"
                           Background="#F44336"
                           Height="40"
                           Padding="20,0"
                           IsEnabled="{Binding SelectedCount, Converter={StaticResource ZeroToVisibilityConverter}, ConverterParameter=Inverse}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
