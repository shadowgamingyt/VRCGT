<UserControl x:Class="VRCGroupTools.Views.InstanceInviterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodels="clr-namespace:VRCGroupTools.ViewModels"
             d:DataContext="{d:DesignInstance Type=viewmodels:InstanceInviterViewModel}"
             mc:Ignorable="d"
             Background="Transparent"
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="ðŸ’Œ Instance Inviter" 
                      FontSize="28" 
                      FontWeight="Bold" 
                      Foreground="White"/>
            <TextBlock Text="Invite users from your current VRChat instance to your group" 
                      Foreground="#888" 
                      FontSize="14" 
                      Margin="0,5,0,0"/>
        </StackPanel>

        <!-- Current Instance Info -->
        <Border Grid.Row="1" Background="#2D2D30" CornerRadius="8" Padding="20" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="ðŸ“ Current Instance" 
                          FontSize="18"
                          FontWeight="SemiBold"
                          Foreground="White"
                          Margin="0,0,0,15"/>
                
                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <TextBlock Text="ðŸŒ " 
                              FontSize="16"
                              VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding CurrentInstanceDisplay}" 
                              FontSize="14"
                              Foreground="White"
                              VerticalAlignment="Center"/>
                </StackPanel>
                
                <Button Content="ðŸ”„ Refresh Instance Detection" 
                       Command="{Binding RefreshCommand}"
                       Style="{StaticResource MaterialDesignRaisedButton}"
                       Background="#7C4DFF"
                       Width="260"
                       HorizontalAlignment="Left"/>
            </StackPanel>
        </Border>

        <!-- Filters -->
        <Border Grid.Row="2" Background="#2D2D30" CornerRadius="8" Padding="20" Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="âš™ï¸ Filters" 
                          FontSize="16"
                          FontWeight="SemiBold"
                          Foreground="White"
                          Margin="0,0,0,15"/>
                
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Filter Checkboxes -->
                    <WrapPanel Grid.Column="0" Orientation="Horizontal">
                        <CheckBox Content="18+ Only" 
                                 IsChecked="{Binding Only18Plus}"
                                 Foreground="White"
                                 Margin="0,0,20,10"/>
                        <CheckBox Content="Skip Visitors" 
                                 IsChecked="{Binding SkipVisitors}"
                                 Foreground="White"
                                 Margin="0,0,20,10"/>
                        <CheckBox Content="Skip New Users" 
                                 IsChecked="{Binding SkipNewUsers}"
                                 Foreground="White"
                                 Margin="0,0,20,10"/>
                        <CheckBox Content="Skip Users" 
                                 IsChecked="{Binding SkipUsers}"
                                 Foreground="White"
                                 Margin="0,0,20,10"/>
                        <CheckBox Content="Skip Known" 
                                 IsChecked="{Binding SkipKnown}"
                                 Foreground="White"
                                 Margin="0,0,20,10"/>
                    </WrapPanel>

                    <!-- Auto Invite Toggle -->
                    <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="ðŸ¤– Auto Invite:" 
                                  Foreground="White"
                                  VerticalAlignment="Center"
                                  Margin="0,0,10,0"/>
                        <ToggleButton IsChecked="{Binding AutoInviteEnabled}"
                                     Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                     ToolTip="Automatically invite new instance users that pass filters"/>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Border>

        <!-- Instance Users List -->
        <Border Grid.Row="3" Background="#2D2D30" CornerRadius="8" Padding="20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Header -->
                <Grid Grid.Row="0" Margin="0,0,0,15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Column="0" 
                              Text="ðŸ‘¥" 
                              FontSize="18" 
                              VerticalAlignment="Center" 
                              Margin="0,0,10,0"/>
                    <TextBlock Grid.Column="1" 
                              Text="Users in Instance" 
                              FontSize="18" 
                              FontWeight="SemiBold" 
                              Foreground="White" 
                              VerticalAlignment="Center"/>
                    <Border Grid.Column="2" 
                           Background="#7C4DFF" 
                           CornerRadius="12" 
                           Padding="8,4"
                           Visibility="{Binding FilteredInstanceUsers.Count, Converter={StaticResource ZeroToVisibilityConverter}, ConverterParameter=Inverse}">
                        <TextBlock Text="{Binding FilteredInstanceUsers.Count}" 
                                  Foreground="White" 
                                  FontWeight="Bold" 
                                  FontSize="12"/>
                    </Border>
                </Grid>

                <!-- Empty State -->
                <StackPanel Grid.Row="1" 
                           VerticalAlignment="Center" 
                           HorizontalAlignment="Center"
                           Visibility="{Binding FilteredInstanceUsers.Count, Converter={StaticResource ZeroToVisibilityConverter}}">
                    <TextBlock Text="âš ï¸" FontSize="48" HorizontalAlignment="Center" Margin="0,0,0,15"/>
                    <TextBlock Text="No users detected in this instance" 
                              FontSize="16" 
                              FontWeight="SemiBold" 
                              Foreground="White" 
                              HorizontalAlignment="Center"
                              Margin="0,0,0,10"/>
                    <TextBlock Text="Try refreshing instance detection or adjust your filters" 
                              FontSize="13" 
                              Foreground="#888" 
                              HorizontalAlignment="Center"/>
                </StackPanel>

                <!-- Users List -->
                <ScrollViewer Grid.Row="1" 
                             VerticalScrollBarVisibility="Auto"
                             Visibility="{Binding FilteredInstanceUsers.Count, Converter={StaticResource ZeroToVisibilityConverter}, ConverterParameter=Inverse}">
                    <ItemsControl ItemsSource="{Binding FilteredInstanceUsers}" Padding="5">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#1E1E1E" 
                                       CornerRadius="8" 
                                       Padding="15" 
                                       Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="Auto"/>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <!-- Selection Checkbox -->
                                        <CheckBox Grid.Column="0" 
                                                 IsChecked="{Binding IsSelected}"
                                                 VerticalAlignment="Center"
                                                 Margin="0,0,15,0"/>

                                        <!-- Avatar -->
                                        <Border Grid.Column="1" 
                                               Width="50" Height="50" 
                                               CornerRadius="25" 
                                               Background="#2D2D30" 
                                               ClipToBounds="True" 
                                               VerticalAlignment="Center"
                                               Margin="0,0,15,0">
                                            <Image Source="{Binding User.ProfilePicUrl}" 
                                                  Stretch="UniformToFill"/>
                                        </Border>

                                        <!-- User Info -->
                                        <StackPanel Grid.Column="2" VerticalAlignment="Center">
                                            <TextBlock Text="{Binding User.DisplayName}" 
                                                      Foreground="White" 
                                                      FontWeight="SemiBold" 
                                                      FontSize="15"/>
                                            <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                                <TextBlock Text="{Binding TrustLevel}" 
                                                          Foreground="{Binding TrustLevelBrush}"
                                                          FontSize="11"
                                                          Margin="0,0,10,0"/>
                                                <TextBlock Text="ðŸ”ž" 
                                                          FontSize="11"
                                                          Visibility="{Binding User.IsAgeVerified, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                            </StackPanel>
                                            <TextBlock Text="{Binding User.UserId}" 
                                                      Foreground="#666" 
                                                      FontSize="10" 
                                                      Margin="0,3,0,0"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Action Bar -->
        <Border Grid.Row="4" 
               Background="#252526" 
               Padding="20,15"
               Visibility="{Binding FilteredInstanceUsers.Count, Converter={StaticResource ZeroToVisibilityConverter}, ConverterParameter=Inverse}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Selection Controls -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Button Content="Select All" 
                           Command="{Binding SelectAllInstanceUsersCommand}"
                           Style="{StaticResource MaterialDesignFlatButton}"
                           Foreground="#7C4DFF"
                           Margin="0,0,10,0"/>
                    <Button Content="Deselect All" 
                           Command="{Binding DeselectAllInstanceUsersCommand}"
                           Style="{StaticResource MaterialDesignFlatButton}"
                           Foreground="#7C4DFF"/>
                </StackPanel>

                <!-- Selected Count -->
                <TextBlock Grid.Column="1" 
                          Text="{Binding InstanceUserSelectedCount, StringFormat='{}{0} selected'}"
                          Foreground="#888"
                          VerticalAlignment="Center"
                          HorizontalAlignment="Center"
                          FontSize="14"/>

                <!-- Invite Button -->
                <Button Grid.Column="2" 
                       Content="ðŸ“¨ Invite Selected to Group" 
                       Command="{Binding InviteInstanceUsersCommand}"
                       Style="{StaticResource MaterialDesignRaisedButton}"
                       Background="#4CAF50"
                       Height="40"
                       Padding="20,0"
                       IsEnabled="{Binding InstanceUserSelectedCount, Converter={StaticResource ZeroToVisibilityConverter}, ConverterParameter=Inverse}"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>
