<UserControl x:Class="VRCGroupTools.Views.InviterHubView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewmodels="clr-namespace:VRCGroupTools.ViewModels"
             xmlns:views="clr-namespace:VRCGroupTools.Views"
             d:DataContext="{d:DesignInstance Type=viewmodels:InviterHubViewModel}"
             mc:Ignorable="d"
             Background="Transparent"
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header with Mode Selection -->
        <Border Grid.Row="0" Background="#1E1E1E" CornerRadius="8" Padding="20" Margin="0,0,0,20">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Title -->
                <StackPanel Grid.Row="0" Margin="0,0,0,20">
                    <TextBlock Text="ðŸ“¬ Inviter Hub" 
                              FontSize="28" 
                              FontWeight="Bold" 
                              Foreground="White"/>
                    <TextBlock Text="Invite users to groups, instances, or connect with friends" 
                              Foreground="#888" 
                              FontSize="14" 
                              Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Mode Selection Buttons -->
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0" 
                           Command="{Binding SelectModeCommand}"
                           CommandParameter="GroupInviter"
                           Margin="0,0,10,0"
                           Height="60">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                <Setter Property="Background" Value="#424242"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedMode}" Value="GroupInviter">
                                        <Setter Property="Background" Value="#7C4DFF"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="ðŸ“¨" FontSize="20" HorizontalAlignment="Center"/>
                            <TextBlock Text="Group Inviter" 
                                      FontSize="13" 
                                      FontWeight="SemiBold"
                                      HorizontalAlignment="Center"
                                      Margin="0,4,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button Grid.Column="1" 
                           Command="{Binding SelectModeCommand}"
                           CommandParameter="InstanceInviter"
                           Margin="5,0"
                           Height="60">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                <Setter Property="Background" Value="#424242"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedMode}" Value="InstanceInviter">
                                        <Setter Property="Background" Value="#7C4DFF"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="ðŸ’Œ" FontSize="20" HorizontalAlignment="Center"/>
                            <TextBlock Text="Instance Inviter" 
                                      FontSize="13" 
                                      FontWeight="SemiBold"
                                      HorizontalAlignment="Center"
                                      Margin="0,4,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button Grid.Column="2" 
                           Command="{Binding SelectModeCommand}"
                           CommandParameter="FriendInviter"
                           Margin="10,0,0,0"
                           Height="60">
                        <Button.Style>
                            <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
                                <Setter Property="Background" Value="#424242"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SelectedMode}" Value="FriendInviter">
                                        <Setter Property="Background" Value="#7C4DFF"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        <StackPanel Orientation="Vertical">
                            <TextBlock Text="ðŸ‘¥" FontSize="20" HorizontalAlignment="Center"/>
                            <TextBlock Text="Friend Manager" 
                                      FontSize="13" 
                                      FontWeight="SemiBold"
                                      HorizontalAlignment="Center"
                                      Margin="0,4,0,0"/>
                        </StackPanel>
                    </Button>
                </Grid>
            </Grid>
        </Border>

        <!-- Content Area -->
        <Border Grid.Row="1" Background="Transparent">
            <ContentControl>
                <ContentControl.Resources>
                    <DataTemplate DataType="{x:Type viewmodels:InviteToGroupViewModel}">
                        <views:InviteToGroupView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type viewmodels:InstanceInviterViewModel}">
                        <views:InstanceInviterView/>
                    </DataTemplate>
                    <DataTemplate DataType="{x:Type viewmodels:FriendInviterViewModel}">
                        <views:FriendInviterView/>
                    </DataTemplate>
                </ContentControl.Resources>
                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <Setter Property="Content" Value="{Binding InviteToGroupVM}"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedMode}" Value="GroupInviter">
                                <Setter Property="Content" Value="{Binding InviteToGroupVM}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding SelectedMode}" Value="InstanceInviter">
                                <Setter Property="Content" Value="{Binding InstanceInviterVM}"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding SelectedMode}" Value="FriendInviter">
                                <Setter Property="Content" Value="{Binding FriendInviterVM}"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>
        </Border>
    </Grid>
</UserControl>
